-- Robust Rayfield loader (single-panel script showing shutdown notice)
local success, Rayfield = pcall(function()
    return loadstring(game:HttpGet("https://sirius.menu/rayfield"))()
end)

if not success or not Rayfield then
    warn("Failed to load Rayfield UI library.")
    return
end

-- Create the main Rayfield window
local Window = Rayfield:CreateWindow({
    Name = "Please find another script this one is shutdown", -- main title displayed on the UI
    LoadingTitle = "This script has been shut down",          -- loading title (shown while UI loads)
    LoadingSubtitle = "This script has been shut down",       -- loading subtitle (matches loading title per request)
    ConfigurationSaving = {
        Enabled = false, -- turned off since this is just a notice
        FolderName = nil,
        FileName = nil,
    },
    Discord = {
        Enabled = false
    },
    KeySystem = false -- no key system needed for a shutdown notice
})

-- Create a single tab called "Note"
local NoteTab = Window:CreateTab("Note", 4483362458) -- icon id optional

-- Add a paragraph (multi-line text) with the exact note content requested
NoteTab:CreateParagraph({
    Title = "Notice",
    Content = "this script has been shutdown by one of the owner, the reason it was shutdown is because it got patched, im sorry please find another script. if there is another way to fix the script than ill add it back."
})

-- You can also add a button to close the UI if desired
NoteTab:CreateButton({
    Name = "Close UI",
    Callback = function()
        Rayfield:Destroy()
    end
})

-- Optional: show a toast/notification on load so users see the shutdown message immediately
pcall(function()
    Rayfield:Notify({
        Title = "Script Shutdown",
        Content = "This script has been shut down. Please find another script.",
        Duration = 6
    })
end)
